# ==============================================================================
# AI CONTENT PIPELINE - GLOBAL CONFIGURATION
# ==============================================================================

# --- DATABASE (PostgreSQL) ---
# NOTE: DB_HOST must match the service name in docker-compose.yml
DB_CONNECTION=pgsql
DB_HOST=db
DB_PORT=5432
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

# --- LARAVEL API SETTINGS ---
APP_NAME=AI_Pipeline_Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000/

# Laravel Internal Drivers
LOG_CHANNEL=stack
SESSION_DRIVER=database
CACHE_STORE=database
QUEUE_CONNECTION=database

# --- NODE.JS EVOLUTION SERVICE ---
PORT=3000
NODE_ENV=

# AI API Keys
GEMINI_API_KEY=
GOOGLE_API_KEY=
GOOGLE_CX=

# Internal Network: How Node talks to Laravel inside Docker
# 'laravel_api' is the container name in docker-compose
LARAVEL_API_URL=http://laravel_api:8000/api

# --- REACT FRONTEND (Vite) ---
# NOTE: Use 'localhost' here because these are accessed by your BROWSER 
# which lives outside the Docker network.
VITE_LARAVEL_API_URL=http://localhost:8000/api
VITE_NODE_API_URL=http://localhost:3000/api/v1/articles